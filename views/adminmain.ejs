<%- include('partials/navbar') %>

    <br>
    <br>
    <h1>Admin</h1>
    <style>
        .row>div[class*='col-'] {
            display: flex;
            flex: 1 0 auto;
        }
    </style>
    <div class="container-fluid">
        <div class="card-deck">

            <% products.forEach(function(product){ %>
            <div class="card mb-4" style="min-width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text"><%= product.description %></p>
                    <p class="card-text">
                        <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> <%= product.price %> $
                        </div>
                    </p>
                    <a href="/edit/add/<%= product.id %>" class="btn btn-primary">Edit</a>
                </div>
            </div>
            <div class="card mb-3" style="min-width: 18rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text"><%= product.description %></p>
                    <p class="card-text">
                        <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> <%= product.price %> $
                        </div>
                    </p>
                    <a href="/edit/add/<%= product.id %>" class="btn btn-primary">Edit</a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

<%- include('partials/footer') %>