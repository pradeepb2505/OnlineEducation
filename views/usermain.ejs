<%- include('partials/navbar') %>
    <br>
    <br>
    <h1>Shop for Courses</h1>
    <br>
    <br>
    <%- include('partials/header') %>
    <br>
    <br>
    <% products.forEach(function(product){ %>
        <div class="row">
          <div class="col-md-12">
            <div class="thumbnail">
              <div class="caption">
                <h3><%= product.title %></h3>
                  <p class="description"><%= product.description %></p>
                  <div class="clearfix">
                  <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> <%= product.price %> $</div>
                    <a href="/main/add/<%= product.id %>" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                  </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
<%- include('partials/footer') %>